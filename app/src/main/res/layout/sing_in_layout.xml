<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F3F5"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <ImageView
                android:layout_width="163.7dp"
                android:layout_height="148.7dp"
                android:layout_gravity="center"
                android:layout_marginTop="21.7dp"
                android:src="@drawable/utc_sinfondo"
                android:visibility="visible" />


            <FrameLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="26.7dp">


                <FrameLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical">


                        <LinearLayout
                            android:layout_width="296dp"
                            android:layout_height="250dp"
                            android:layout_marginBottom="25dp"
                            android:background="@drawable/white_rounded_corner"
                            android:orientation="vertical"
                            android:paddingLeft="16dp"
                            android:paddingRight="16dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="15dp"
                                android:layout_marginBottom="12dp"
                                android:fontFamily="@font/opensans_bold"
                                android:gravity="center_horizontal"
                                android:text="Inicio de sesión"
                                android:textColor="#333232"
                                android:textSize="20.3sp" />


                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/text_email_layout_sing_in"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="20dp">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/text_email_sing_in"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:hint="Correo"
                                    android:inputType="textEmailAddress"
                                    android:textSize="15sp" />
                            </com.google.android.material.textfield.TextInputLayout>


                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/text_password_layout_sing_in"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="6dp"
                                app:passwordToggleEnabled="true">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/text_password_sing_in"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:hint="Contraseña"
                                    android:inputType="textPassword"
                                    android:textSize="15sp" />
                            </com.google.android.material.textfield.TextInputLayout>


                        </LinearLayout>

                    </LinearLayout>
                </FrameLayout>


            </FrameLayout>

            <Button
                android:id="@+id/btn_sing_in"
                android:layout_width="296dp"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_corner"
                android:text="Continuar"
                android:textAllCaps="false"
                android:textColor="@color/colorWhite"

                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="14dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/opensans_regular"
                    android:gravity="center_horizontal"
                    android:text="¿Soy nuevo?"
                    android:textColor="@color/colorGrey"
                    android:textSize="13.3sp" />

                <TextView
                    android:id="@+id/text_sing_in"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:fontFamily="@font/opensans_bold"
                    android:gravity="center_horizontal"
                    android:text="Registrase"
                    android:textColor="@color/colorAccent"
                    android:textSize="13.3sp" />

            </LinearLayout>
        </LinearLayout>

    </ScrollView>
</RelativeLayout>