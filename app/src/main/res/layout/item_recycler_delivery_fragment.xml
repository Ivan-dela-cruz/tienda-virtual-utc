<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:focusable="true"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginBottom="10dp"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:layout_height="125dp"
    android:id="@+id/delivery_item_card_view">
    <RelativeLayout
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_marginBottom="5dp"
            android:id="@+id/delivery_item_txt_name_customer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="7dp"
            android:layout_toStartOf="@+id/delivery_item_img_status"
            android:fontFamily="@font/staatliches_regular"
            android:text="LOS ALAMOS COMPANY"
            android:textColor="@color/colorBlack"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/delivery_item_txt_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/delivery_item_txt_name_customer"
            android:layout_alignEnd="@+id/delivery_item_txt_name_customer"
            android:layout_marginEnd="7dp"
            android:layout_marginBottom="5dp"
            android:text="Avenida 10 de Agosto y calle principal J Casa nÂ° 345"
            android:textColor="@color/colorLightGrey"
            android:textSize="9sp" />
        <View
            android:layout_below="@+id/delivery_item_txt_address"
            android:layout_alignEnd="@+id/delivery_item_txt_name_customer"
            android:id="@+id/wie_red"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorRed"/>

        <TextView
            android:layout_marginTop="5dp"
            android:id="@+id/delivery_item_txt_customer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/wie_red"
            android:layout_alignEnd="@+id/delivery_item_txt_name_customer"
            android:layout_marginEnd="7dp"
            android:layout_marginBottom="5dp"
            android:text="Para: Rafael Correa"
            android:textColor="@color/colorLightGrey"
            android:textSize="9sp" />

        <ImageView
            android:id="@+id/icon_timee"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_below="@+id/delivery_item_txt_customer"
            android:layout_alignParentStart="true"
            android:layout_marginStart="0dp"
            android:src="@drawable/ic_baseline_access_time_24" />


        <TextView
            android:id="@+id/delivery_item_txt_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/delivery_item_txt_customer"
            android:layout_alignEnd="@+id/delivery_item_txt_name_customer"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="7dp"
            android:layout_marginBottom="5dp"
            android:layout_toEndOf="@+id/icon_timee"
            android:text="10 de Agosto del 2020"
            android:textColor="@color/colorLightGrey"
            android:textSize="10sp" />

        <ImageView
            android:id="@+id/icon_payment"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="0dp"
            android:layout_marginBottom="0dp"
            android:src="@drawable/ic_baseline_payment_24" />

        <TextView
            android:id="@+id/delivery_item_txt_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/delivery_item_txt_date"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="5dp"
            android:layout_marginBottom="0dp"
            android:layout_toEndOf="@+id/icon_payment"
            android:gravity="bottom"
            android:text="Valor  $ 2300"
            android:textColor="@color/colorBlack"
            android:textSize="11sp" />

        <LinearLayout
            android:id="@+id/delivery_item_img_status"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="0dp"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:id="@+id/delivery_item_img"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_baseline_store_mall_directory_24" />
            <TextView
                android:id="@+id/delivery_item_txt_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="pendiente"
                android:textColor="@color/colorLightGrey"
                android:textSize="10sp" />

        </LinearLayout>

        <Button
            android:id="@+id/delivery_item_button_detail"
            android:layout_width="100dp"
            android:layout_height="25dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/rounded_corner"
            android:fontFamily="@font/opensans_regular"
            android:text="Ver"
            android:textAllCaps="false"
            android:textColor="@color/colorWhite"
            android:textSize="11sp" />



    </RelativeLayout>

</androidx.cardview.widget.CardView>