<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <ScrollView
        android:layout_width="match_parent"
        android:fillViewport="true"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_marginBottom="55dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:scaleType="centerCrop"
                android:id="@+id/account_fragment_img_background"
                android:layout_width="match_parent"
                android:layout_height="280dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="0dp"
                android:src="@drawable/oscuro" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="15dp"
                android:layout_marginTop="140dp"
                android:layout_marginEnd="0dp"
                android:fontFamily="@font/opensans_bold"
                android:text="Mi perfil"
                android:textColor="@color/colorWhite"
                android:textSize="25sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/account_fragment_img_background"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="15dp"
                android:layout_marginTop="-60dp"
                android:layout_marginEnd="15dp"
                android:orientation="horizontal">
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="400dp"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="10dp">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/account_fragment_txt_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentEnd="true"
                            android:layout_marginStart="0dp"
                            android:layout_marginTop="65dp"
                            android:layout_marginEnd="0dp"
                            android:fontFamily="@font/opensans_bold"
                            android:gravity="center"
                            android:text="Juilo Jaramillo"
                            android:textColor="@color/colorBlack" />
                        <TextView
                            android:id="@+id/account_fragment_txt_email"
                            android:layout_marginTop="90dp"
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/opensans_regular"
                            android:textColor="@color/colorBlack"
                            android:text="juliojaramillo@utc.edu.ec"/>

                        <ImageView
                            android:padding="6dp"
                            android:id="@+id/icon_phone_fa"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_below="@+id/account_fragment_txt_email"
                            android:layout_alignParentStart="true"
                            android:layout_marginStart="20dp"
                            android:layout_marginTop="10dp"
                            android:src="@drawable/ic_baseline_phone_iphone_40" />

                        <TextView
                            android:gravity="center|start"
                            android:id="@+id/account_fragment_txt_movil"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_below="@+id/account_fragment_txt_email"
                            android:layout_alignParentEnd="true"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginEnd="10dp"
                            android:layout_toEndOf="@+id/icon_phone_fa"
                            android:fontFamily="@font/opensans_regular"
                            android:text="0989123456"
                            android:textColor="@color/colorGrey"
                            android:textSize="12sp" />

                        <ImageView
                            android:padding="6dp"
                            android:id="@+id/icon_phone2_fa"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_below="@+id/account_fragment_txt_email"
                            android:layout_alignParentStart="true"
                            android:layout_marginStart="20dp"
                            android:layout_marginTop="60dp"
                            android:src="@drawable/ic_baseline_phone_40" />

                        <TextView
                            android:gravity="center|start"
                            android:id="@+id/account_fragment_txt_phone"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_below="@+id/account_fragment_txt_email"
                            android:layout_alignParentEnd="true"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="60dp"
                            android:layout_marginEnd="10dp"
                            android:layout_toEndOf="@+id/icon_phone2_fa"
                            android:fontFamily="@font/opensans_regular"
                            android:text="0989123456"
                            android:textColor="@color/colorGrey"
                            android:textSize="12sp" />
                        <ImageView
                            android:padding="6dp"
                            android:id="@+id/icon_address_fa"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_below="@+id/account_fragment_txt_phone"
                            android:layout_alignParentStart="true"
                            android:layout_marginStart="20dp"
                            android:layout_marginTop="10dp"
                            android:src="@drawable/ic_baseline_location_on_40" />

                        <TextView
                            android:gravity="center|start"
                            android:id="@+id/account_fragment_txt_address"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_below="@+id/account_fragment_txt_phone"
                            android:layout_alignParentEnd="true"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginEnd="10dp"
                            android:layout_toEndOf="@+id/icon_address_fa"
                            android:fontFamily="@font/opensans_regular"
                            android:text="Avwnidad 6 de diciembre y Rio Amazonas"
                            android:textColor="@color/colorGrey"
                            android:textSize="12sp" />
                        <ImageView
                            android:padding="6dp"
                            android:id="@+id/account_fragment_btn_edit_pass"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_below="@+id/account_fragment_txt_address"
                            android:layout_alignParentStart="true"
                            android:layout_marginStart="20dp"
                            android:layout_marginTop="10dp"
                            android:src="@drawable/ic_baseline_lock_40" />

                        <TextView
                            android:gravity="center|start"
                            android:id="@+id/account_fragment_txt_password"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_below="@+id/account_fragment_txt_address"
                            android:layout_alignParentEnd="true"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginEnd="10dp"
                            android:layout_toEndOf="@+id/account_fragment_btn_edit_pass"
                            android:fontFamily="@font/opensans_regular"
                            android:text="* * * * * * * * *"
                            android:textColor="@color/colorGrey"
                            android:textSize="12sp" />

                        <Button
                            android:id="@+id/account_fragment_btn_logout"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentBottom="true"
                            android:layout_marginStart="20dp"
                            android:layout_marginBottom="6dp"
                            android:background="@drawable/rounded_corner"
                            android:fontFamily="@font/opensans_regular"
                            android:text="Cerrar sesión"
                            android:textAllCaps="false"
                            android:textColor="@color/colorWhite" />

                        <Button
                            android:id="@+id/account_fragment_btn_edit"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentBottom="true"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="12dp"
                            android:layout_marginBottom="7dp"
                            android:layout_toEndOf="@+id/account_fragment_btn_logout"
                            android:background="@drawable/blue_border_rounded_cornwe"
                            android:fontFamily="@font/opensans_regular"
                            android:text="Editar perfil"
                            android:textAllCaps="false"
                            android:textColor="@color/colorWhite" />
                    </RelativeLayout>


                </androidx.cardview.widget.CardView>
            </LinearLayout>
            <RelativeLayout

                android:layout_marginTop="-120dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/account_fragment_img_background"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <Button
                        android:gravity="center"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:background="@drawable/border_whte_image"/>
                </LinearLayout>
                <LinearLayout
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:padding="3dp"
                        app:civ_border_color="@color/colorWhite"
                        android:src="@drawable/avatar" />
                </LinearLayout>


            </RelativeLayout>
        </RelativeLayout>

    </ScrollView>





</RelativeLayout>